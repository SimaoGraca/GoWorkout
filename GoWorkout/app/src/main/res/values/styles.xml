<resources>
    <!-- Estilo personalizado para o texto dos itens ativos -->
    <style name="BottomNavTextAppearanceActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="BottomNavTextAppearanceInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SpinnerItemTheme" parent="Theme.AppCompat.Light">
        <item name="android:dropDownItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">8sp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
